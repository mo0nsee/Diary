<Window x:Class="Diary.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Diary"
        mc:Ignorable="d"
        Language="ru-RU"
        Title="MainWindow" Height="450" Width="727">
    <Grid>
        <DataGrid Name="ClauseGrid" Margin="0,0,0,168" IsReadOnly="False" AutoGenerateColumns="False">
            <DataGrid.Columns>
                <DataGridTextColumn x:Name="Description" Header="Описание" Width="150" Binding="{Binding Description}"/>
                <DataGridTemplateColumn Header="Начальная дата" Width="150">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <DatePicker x:Name="datePicker1" SelectedDateFormat="Short" SelectedDate="{Binding Date.DateStart, UpdateSourceTrigger=PropertyChanged}" />
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
                <DataGridTemplateColumn Header="Начальная дата" Width="150">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <DatePicker x:Name="datePicker2" SelectedDateFormat="Short" SelectedDate="{Binding Date.DateEnd, UpdateSourceTrigger=PropertyChanged}" />
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
                <DataGridCheckBoxColumn x:Name="CloseClause" Header="Закрытие задачи"  Width="150" Binding="{Binding Close}"/>
            </DataGrid.Columns>
        </DataGrid>
        <Button Content="Button" HorizontalAlignment="Left" Click="Button_Click" Width="82" Margin="10,286,0,88"/>
        <Button Content="Button1" HorizontalAlignment="Left" Click="Button_Click_1" Width="82" Margin="170,286,0,88"/>
    </Grid>
</Window>
