<Window x:Class="Diary.AddWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Diary"
        mc:Ignorable="d"
        Title="AddWindow" Height="316" Width="279">
    <Grid>
        <TextBlock  Text="Описание" HorizontalAlignment="Left" Margin="10,18,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="Description" SpellCheck.IsEnabled="True" Language="ru-ru" Margin="80,18,10,0" VerticalAlignment="Top" Height="68" TextWrapping="Wrap"/>

        <TextBlock Text="Начальная дата" VerticalAlignment="Top" Margin="10,111,205,0" TextWrapping="Wrap"/>
        <DatePicker x:Name="DateStart" VerticalAlignment="Top" Margin="80,115,10,0" />

        <TextBlock Text="Конечная дата" VerticalAlignment="Top" Margin="10,161,205,0" TextWrapping="Wrap"/>
        <DatePicker x:Name="DateEnd" VerticalAlignment="Top" Margin="80,165,10,0" />

        <Button Margin="80,218,74,26" Content="Добавить" Click="Button_Click"/>
    </Grid>
</Window>
